@model IEnumerable<Product>



@{
    ViewData["Title"] = "DFSTORE.COM";
}

<div id="carouselIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselIndicators" data-slide-to="1"></li>
        <li data-target="#carouselIndicators" data-slide-to="2"></li>
        <li data-target="#carouselIndicators" data-slide-to="3"></li>
        <li data-target="#carouselIndicators" data-slide-to="4"></li>
        <li data-target="#carouselIndicators" data-slide-to="5"></li>
        <li data-target="#carouselIndicators" data-slide-to="6"></li>
        <li data-target="#carouselIndicators" data-slide-to="7"></li>
        <li data-target="#carouselIndicators" data-slide-to="8"></li>
        <li data-target="#carouselIndicators" data-slide-to="9"></li>
        <li data-target="#carouselIndicators" data-slide-to="10"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="https://dfstore.com/media/responsivebannerslider/responsivebannerslider/motogirlold-min_1.jpg" alt="1 слайд">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://dfstore.com/media/responsivebannerslider/responsivebannerslider/nebulaold-min.jpg" alt="2 слайд">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://dfstore.com/media/responsivebannerslider/responsivebannerslider/newbasicold.jpg" alt="3 слайд">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://dfstore.com/media/responsivebannerslider/responsivebannerslider/slider_5-min.jpg" alt="4 слайд">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://dfstore.com/media/responsivebannerslider/responsivebannerslider/stari.jpg" alt="5 слайд">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://dfstore.com/media/responsivebannerslider/responsivebannerslider/baner-2.jpg" alt="6 слайд">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://dfstore.com/media/responsivebannerslider/responsivebannerslider/stariq.jpg" alt="7 слайд">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://dfstore.com/media/responsivebannerslider/responsivebannerslider/launge-green.jpg" alt="8 слайд">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://dfstore.com/media/responsivebannerslider/responsivebannerslider/66.jpg" alt="9 слайд">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://dfstore.com/media/responsivebannerslider/responsivebannerslider/hoodi.jpg" alt="10 слайд">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="separator m-3">НОВЫЕ ТОВАРЫ</div>

<div class="container flex-row">
    <div class="card-group">
        @foreach (var product in Model)
        {
            <div class="product card col-12 col-sm-12 col-lg-3">
                <div class="card-img img-thumbnail" style="background-image: url('@product.Image')"><span class="badge-dark badge justify-content-around">новый</span></div>
                <div class="card-body justify-content-between text-center">
                    <h5 class="card-title">@product.Title</h5>
                    <div class="card-price">@product.Price руб</div>

                </div>
            </div>
        }
    </div>
</div>

<div class="separator m-3">ПОПУЛЯРНЫЕ ТОВАРЫ</div>
<div class="container">
    <div class="card-columns">

        @foreach (var product in Model)
        {
            <div class="card">
                <div class="card-img" style="background-image: url('@product.Image')"></div>
                <div class="card-body justify-content-between text-center">
                    <h5 class="card-title text-center">@product.Title</h5>
                    <h5 class="card-text text-center">@product.Price руб</h5>

                </div>
            </div>
        }
    </div>
</div>
<script>
    $(function () {
        // метод cycle
        $('.btn').click(function () {
            var action = $(this).attr('data-action');
            if (action.indexOf('to') >= 0) {
                var action = parseInt(action.substring(3)) - 1;
            }
            $('#carousel').carousel(action);
        });
    });
</script>
